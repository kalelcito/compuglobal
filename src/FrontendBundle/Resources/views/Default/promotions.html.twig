        <div class="col-md-12">
            <div class="container">
                <div class="carousel slide margin-tb" data-ride="carousel" id="myCarousel">
                    <div class="carousel-inner" role="listbox">
                        {% for ban in banners %}
                            {% if loop.first %}
                                <div class="item active" data-interval="2000">
                                    {% if ban.enlace == '' %}
                                        <img src="{{ asset('uploads/images/'~ban.imagen) }}" alt="Banner Imagen">
                                    {% else %}
                                        <a href="{{ ban.enlace }}"><img src="{{ asset('uploads/images/'~ban.imagen) }}" alt="Banner Imagen"></a>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="item" data-interval="1">
                                    {% if ban.enlace == '' %}
                                        <img src="{{ asset('uploads/images/'~ban.imagen) }}" alt="Banner Imagen">
                                    {% else %}
                                        <a href="{{ ban.enlace }}"><img src="{{ asset('uploads/images/'~ban.imagen) }}" alt="Banner Imagen"></a>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div><a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i><span class="sr-only">Previous</span></a><a class="right carousel-control" href="#myCarousel" role="button"
                                                                                                                                                                                                         data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i><span class="sr-only">Next</span></a></div>
                </div>
            </div>
        </div>
