<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:url" content="{{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}"/>
    {% block opengraph %}{% endblock %}
    <!-- TODO revisar facebook -->
    <title>{% block title %}Compuglobal{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('assets/img/icon.png') }}">

    <!-- LIBRARY CSS -->
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/owl.carousel.min.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/owl.theme.default.min.css') }}">
    <!-- STYLE CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    <!-- LIBRARY FONT -->
    <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}">

    {% block stylesheets %}{% endblock %}
    <!-- LIBRARY JS -->
    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <!-- GOOGLE ANALYTICS -->
</head>

<body>
    <div class="row row-menu">
        <div class="col-md-12">
            <div class="container">
                <nav class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand navbar-link" href="{{ path('homepage') }}"><img class="img-responsive" src="{{ asset('assets/img/logo.png') }}"></a>
                            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Botón Menú</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                        </div>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="nav navbar-nav navbar-right">
                                <li role="presentation"><a href="{{ path('homepage') }}" {% block inicio %}{% endblock %}>Inicio</a></li>
                                <li role="presentation"><a href="{{ path('about') }}" {% block nosotros %}{% endblock %}>Nosotros</a></li>
                                <li role="presentation"><a href="{{ path('contact') }}" {% block contacto %}{% endblock %}>Contacto</a></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right second-row">
                                <li role="presentation"><a class="link" href="#" id="solucioneslink">Soluciones</a></li>
                                <li role="presentation"><a href="{{ path('blog') }}" {% block publicaciones %}{% endblock %}>Publicaciones</a></li>
                                <li role="presentation"><a class="link" href="#" id="videoslink">Videos</a></li>
                                <li role="presentation"><a class="link" href="#" id="bloglink">Blog</a></li>
                                <li role="presentation"><a class="link" href="#" id="capacitacioneslink">Capacitaciones</a></li>
                                <li role="presentation"><a class="link" href="#" id="tagmarketinglink">TagMarketing</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="row no-margin menu2">
        <div class="col-md-12">
            <div class="container">
                <div class="row">
                    <div class="col-xs-3 no-padding">
                        <div class="menu2-div promo"><a href="{{ path('promotions') }}"><h3 class="text-center">Promociones</h3></a></div>
                    </div>
                    {{ render(controller('FrontendBundle:partials:menu')) }}
                </div>
            </div>
        </div>
    </div>

    <div class="body-white">
        {% block body %}{% endblock %}
    </div>

    <div class="row no-margin footer">
        <div class="col-md-12">
            <div class="container">
                <div class="row register">
                    <div class="col-md-12">
                        {{ render(controller('FrontendBundle:partials:registro')) }}
                    </div>
                </div>
                <p id="first-reg">Recibe nuestras promociones y novedades en el mundo de la tecnología.</p>
                <div class="row">
                    <div class="col-sm-3 col-xs-6 margin-tb"><img class="img-responsive" src="{{ asset('assets/img/logo.png') }}"></div>
                    <div class="col-sm-4 col-xs-12 margin-tb">
                        <p>Avenida Juárez No. 203 Col. Centro</p>
                        <p>C.P. 50000 Toluca Méx.</p>
                        <a href="#" data-toggle="modal" modal="dir">
                            <p>¡VISÍTANOS!<span><i class="fa fa-map-marker"></i></span></p>
                        </a>
                        <a href="tel:7222149999">
                            <p><span>Tel:</span> (01 722) 214 99 99</p>
                        </a>
                        <a href="mailto:compuglobal@compuglobal.com.mx">
                            <p><span>E-mail:</span> compuglobal@compuglobal.com.mx</p>
                        </a>
                    </div>
                    <div class="col-sm-3 col-xs-12 margin-tb">
                        <a href="https://www.facebook.com/compuglobalmx" target="_blank"><img src="{{ asset('assets/img/icon_facebook.jpg') }}"></a>
                        <a href="https://twitter.com/compuglobalmx" target="_blank"><img src="{{ asset('assets/img/icon_twitter.jpg') }}"></a>
                        <a href="#"><img src="{{ asset('assets/img/icon_instagram.jpg') }}"></a>
                        <h4 class="text-left">Toda la tecnología</h4></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="dir">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Dirección - Compuglobal</h4></div>
                <div class="modal-body">
                    <iframe allowfullscreen="" frameborder="0" width="100%" height="400" src="https://www.google.com/maps/embed/v1/search?key=AIzaSyBQAH4laL1HSSEwYzRkj6-4CjxcCaQH1c0&amp;q=Compuglobal&amp;zoom=16"></iframe>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cerrar</button><a class="btn btn-primary" role="button" href="https://goo.gl/maps/Px4FWY46oa12" target="_blank">Ver Maps</a></div>
            </div>
        </div>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="same">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Ejemplo</h4></div>
                <div class="modal-body"><img class="img-responsive" src="{{ asset('assets/img/articulo.jpg') }}"></div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="titulomodal"></h4>
                </div>
                <div class="modal-body">
                    <img class="img-responsive" id="imagenmodal" src="{{ asset('uploads/images/logo.png') }}">
                    <p id="descripcionmodal"></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <form id="links" action="{{ path('homepage') }}" method="post">
        <input class="hidden" value="" id="ide" name="ide">
    </form>

    <!-- SCRIPTS -->
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
    <script>
        $('.link').click(function (e) {
            {% if app.request.get('_route') == 'homepage' %}
            {% else %}
                e.preventDefault();
                var id = $(this).attr('id').replace("link", "");
                $('#ide').attr('value',id);
                $('#links').submit();
            {% endif %}
        });
    </script>
</body>

</html>