    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Compuglobal','submenu':'Articulo Simple'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Articulo Simple</h3>
               {#<p class="text-muted m-b-30">{{ ArticuloSimple</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th> <th>Titulo</th>  <th>Activo</th> <th>Actualizado</th>                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for articuloSimple in articuloSimples %}
                    <tr>
                        <td>{{ i }}</td> <td>{{ articuloSimple.titulo }}</td>  <td>{{  articuloSimple.activo|sino }}</td>   <td>{% if articuloSimple.updatedat %}{{ articuloSimple.updatedat|date('Y-m-d') }}{% endif %}</td>                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('articulosimple_show', { 'id': articuloSimple.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('articulosimple_edit', { 'id': articuloSimple.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
