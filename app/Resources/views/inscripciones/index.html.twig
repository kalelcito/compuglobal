{% extends '@Admin/base.html.twig' %}
{% block navegacion %}
    {{ include('@Admin/partials/navegacion.html.twig',{'menu':'Compuglobal','submenu':'Inscripciones'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
</script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Inscripciones</h3>
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th> <th>Curso</th>  <th>Nombre</th>  <th>Correo</th>  <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for inscrito in inscripciones %}
                        <tr>
                            <td>{{ i }}</td> <td>{{ inscrito.curso }}</td> <td>{{ inscrito.nombre }}</td> <td>{{ inscrito.email }}</td>          <td>
                                <div class="btn-group btn-group-xs">
                                    <a href="{{ path('inscripciones_show', { 'id': inscrito.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                </div>
                            </td>
                        </tr>
                        {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
